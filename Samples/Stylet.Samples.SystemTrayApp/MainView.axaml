<Window
    Height="450"
    Title="{Binding DisplayName}"
    Width="650"
    WindowStartupLocation="CenterScreen"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="Stylet.Samples.SystemTrayApp.MainView"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:s="https://github.com/sealoyal2018/stylet.avalonia"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <TextBlock Text="{Binding InstanceId, StringFormat='InstanceId: {0}'}"/>
        <TextBox Text="{Binding Name}" />
        <Button Click="{s:Action SayHello}">Say Hello</Button>
    </StackPanel>
</Window>